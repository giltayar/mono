{
  "name": "@giltayar/carmbo-app",
  "version": "6.5.0",
  "description": "",
  "type": "module",
  "exports": {
    ".": {
      "default": "./src/app/index.ts"
    },
    "./package.json": "./package.json"
  },
  "engines": {
    "node": ">=24.11.0"
  },
  "files": [
    "src",
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "start": "run-p 'start:local:*'",
    "start:stage": "DB_CONNECTION_STRING=$CARMBO_POSTGRES_STAGING_CONNECTION_STRING NODE_ENV=production node $INSPECT_APP --watch ./src/app/index.ts | pino-pretty",
    "stop": "run-p 'stop:*'",
    "start:local:docker-compose": "docker compose up -d",
    "start:local:app": "node $INSPECT_APP --watch ./src/app/index${FAKE}.ts | pino-pretty",
    "stop:docker-compose": "docker compose down",
    "postgres:clean": "docker compose down && sudo rm -rf /tmp/carmbo-app/.db-data",
    "build": "mkdir -p dist && rm -rf dist/* && FORCE_COLOR=1 run-p 'build:*'",
    "build:htmx": "cp node_modules/htmx.org/dist/htmx.min.js dist/htmx.min.js",
    "build:bootstrap": "cp node_modules/bootstrap/dist/css/bootstrap.min.css dist/ && cp node_modules/bootstrap/dist/js/bootstrap.bundle.min.js dist/",
    "postbuild": "run-p 'postbuild:*'",
    "postbuild:docker": "docker build -t giltayar/carmbo-app:$npm_package_version . --secret id=npmrc,src=$HOME/.npmrc",
    "test": "FORCE_COLOR=1 run-p --aggregate-output 'test:*'",
    "test:eslint": "eslint --max-warnings=0 .",
    "test:typescript": "tsgo",
    "test:playwright": "NODE_ENV=test playwright test --config=test/integration",
    "ztest:playwright-e2e": "NODE_ENV=test playwright test --config=test/e2e",
    "test:node": "node $INSPECT_APP $TEST_ONLY --test-force-exit --test 'test/unit/**/**.test.ts'",
    "postpublish": "docker push giltayar/carmbo-app:$npm_package_version"
  },
  "keywords": [
    "javascript",
    "nodejs"
  ],
  "author": "Gil Tayar <gil@tayar.org>",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/giltayar/mono",
    "directory": "packages/commons/carmbo-app",
    "type": "git"
  },
  "dependencies": {
    "@auth0/auth0-fastify": "^1.2.0",
    "@fastify/formbody": "^8.0.2",
    "@fastify/request-context": "^6.2.1",
    "@fastify/static": "^8.3.0",
    "@giltayar/carmel-tools-academy-integration": "^4.3.0",
    "@giltayar/carmel-tools-cardcom-integration": "^5.1.0",
    "@giltayar/carmel-tools-smoove-integration": "^5.1.0",
    "@giltayar/carmel-tools-whatsapp-integration": "^2.5.1",
    "@giltayar/functional-commons": "^2.1.0",
    "@giltayar/http-commons": "^3.1.1",
    "@giltayar/promise-commons": "^2.0.0",
    "@giltayar/url-commons": "^2.2.0",
    "@js-temporal/polyfill": "^0.5.1",
    "@types/yargs": "^17.0.35",
    "bootstrap": "^5.3.8",
    "chance": "^1.1.13",
    "fastify": "^5.6.2",
    "fastify-type-provider-zod": "^6.1.0",
    "htm": "^3.1.1",
    "htmx.org": "^2.0.8",
    "p-retry": "^7.1.0",
    "postgres": "^3.4.7",
    "qs": "^6.14.0",
    "vhtml": "^2.2.0",
    "yargs": "^18.0.0",
    "zod": "^4.1.13"
  },
  "packageManager": "pnpm@10.24.0",
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.1",
    "@giltayar/docker-compose-testkit": "^2.1.0",
    "@playwright/test": "^1.57.0",
    "@railway/cli": "^4.12.0",
    "@types/chance": "^1.1.7",
    "@types/node": "^24.10.1",
    "@types/qs": "^6.14.0",
    "@types/vhtml": "^2.2.9",
    "@typescript/native-preview": "7.0.0-dev.20251205.1",
    "eslint": "^9.39.1",
    "eslint-plugin-n": "^17.23.1",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.7.4",
    "typescript-eslint": "^8.48.1"
  }
}
