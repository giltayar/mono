{
  "name": "@giltayar/carmbo-app",
  "version": "1.10.0",
  "description": "",
  "type": "module",
  "exports": {},
  "engines": {
    "node": ">=24.0.0"
  },
  "files": [
    "src",
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "start": "run-p 'start:*'",
    "stop": "run-p 'stop:*'",
    "start:docker-compose": "docker compose up -d",
    "start:app": "node $INSPECT_APP --watch ./src/app/index.ts | pino-pretty",
    "stop:docker-compose": "docker compose down",
    "postgres:clean": "docker compose down && sudo rm -rf /tmp/carmbo-app/.db-data",
    "build": "mkdir -p dist && FORCE_COLOR=1 run-p 'build:*'",
    "build:htmx": "cp node_modules/htmx.org/dist/htmx.min.js dist/",
    "build:bootstrap": "cp node_modules/bootstrap/dist/css/bootstrap.min.css dist/ && cp node_modules/bootstrap/dist/js/bootstrap.bundle.min.js dist/",
    "test": "FORCE_COLOR=1 run-p --aggregate-output 'test:*'",
    "test:eslint": "eslint --max-warnings=0 .",
    "test:typescript": "tsgo",
    "test:playwright": "NODE_ENV=test playwright test --config=test/e2e"
  },
  "keywords": [
    "javascript",
    "nodejs"
  ],
  "author": "Gil Tayar <gil@tayar.org>",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/giltayar/mono",
    "directory": "packages/commons/carmbo-app",
    "type": "git"
  },
  "dependencies": {
    "@fastify/formbody": "^8.0.2",
    "@fastify/static": "^8.2.0",
    "@giltayar/functional-commons": "^2.0.1",
    "bootstrap": "^5.3.8",
    "fastify": "^5.6.0",
    "fastify-type-provider-zod": "^6.0.0",
    "htm": "^3.1.1",
    "htmx.org": "^2.0.7",
    "postgres": "^3.4.7",
    "qs": "^6.14.0",
    "vhtml": "^2.2.0",
    "zod": "^4.1.9"
  },
  "packageManager": "pnpm@10.17.1",
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.36.0",
    "@giltayar/docker-compose-testkit": "^2.1.0",
    "@playwright/test": "^1.55.0",
    "@types/chance": "^1.1.7",
    "@types/node": "^24.5.2",
    "@types/qs": "^6.14.0",
    "@types/vhtml": "^2.2.9",
    "@typescript/native-preview": "7.0.0-dev.20250927.1",
    "chance": "^1.1.13",
    "eslint": "^9.36.0",
    "eslint-plugin-n": "^17.23.1",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.4.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "typescript-eslint": "^8.44.0"
  }
}
